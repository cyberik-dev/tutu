<h1>ЖД станции</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |railway_station| %>
      <tr>
        <td>
          <div id="railway_station_title_<%= railway_station.id %>">
            <%= railway_station.title %>
          </div>
          <%= render 'form', station: railway_station, hidden: true %>
        </td>
        <td><%= link_to 'Показать', [:admin, railway_station] %></td>
        <td><%= link_to 'Редактировать', '', class: 'edit_station',
                        data: { station_id: railway_station.id } %></td>
        <td><%= link_to 'Удалить', [:admin, railway_station],
                        method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Главная', root_path %>
<%= link_to 'Добавить станцию', new_admin_railway_station_path %>